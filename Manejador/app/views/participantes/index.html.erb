<h1>Lista de Participantes</h1>

<table>
  <tr>
    <th>Idpart</th>
    <th>Mat</th>
    <th>Nom</th>
    <th>Puntaje</th>
    <th>Pos</th>
  </tr>

<% @participantes.each do |participante| %>
  <tr>
    <td><%=h participante.idPart %></td>
    <td><%=h participante.mat %></td>
    <td><%=h participante.nom %></td>
    <td><%=h participante.puntaje %></td>
    <td><%=h participante.pos %></td>
    <td><%= link_to 'Show', participante %></td>
    <td><%= link_to 'Edit', edit_participante_path(participante) %></td>
    <td><%= link_to 'Destroy', participante, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New participante', new_participante_path %>
<form name="input" action="index" method="get">
		<input type="submit" value="Regresar"/>
</form>